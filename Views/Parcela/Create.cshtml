@model ControleFaturamentoJnx.Models.Parcela

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Parcela</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorParcela" class="control-label"></label>
                <input asp-for="ValorParcela" class="form-control" />
                <span asp-validation-for="ValorParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vencimento" class="control-label"></label>
                <input asp-for="Vencimento" class="form-control" />
                <span asp-validation-for="Vencimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class ="form-control">
                    <option value="Pago" selected="selected">Pago</option>
                    <option value="Vencido">Vencido</option>
                    <option value="Pendente">Pendente</option>
                </select>               
                
            </div>
            <div class="form-group">
                <label asp-for="FaturaID" class="control-label"></label>
                <select asp-for="FaturaID" class ="form-control" asp-items="ViewBag.FaturaID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

